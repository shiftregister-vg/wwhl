<?xml version="1.0" encoding="utf-8"?>
<mx:Window xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo"
	layout="horizontal" creationComplete="init()" title="Stats">
	
	<fx:Script>
		<![CDATA[
			import com.asfusion.mate.ioc.InjectorRegistry;
			import mx.collections.ArrayCollection;
			
			private var _trackedEvents:ArrayCollection;
			
			public function set trackedEvents(value:ArrayCollection):void{
				_trackedEvents = value;
				dispatchEvent(new Event('trackedEventsChanged'));
			}
			
			[Bindable ('trackedEventsChanged')]
			public function get trackedEvents():ArrayCollection{
				return _trackedEvents;
			}
			
			private function init():void{
				InjectorRegistry.register(this);
				
				this.nativeWindow.x = (Capabilities.screenResolutionX - width) / 2;
				this.nativeWindow.y = (Capabilities.screenResolutionY - height) / 2;
			}
		]]>
	</fx:Script>
	
	<mx:Tree height="100%" width="225"></mx:Tree>
	<s:VGroup width="100%" height="100%">
		<mx:Label text="Week" fontWeight="bold"/>
		<mx:ColumnChart id="week" height="100%" width="100%">
			<mx:series>
				<mx:ColumnSeries displayName="Series 1" yField=""/>
			</mx:series>
		</mx:ColumnChart>
		<mx:Label text="Month" fontWeight="bold"/>
		<mx:ColumnChart id="month" height="100%" width="100%">
			<mx:series>
				<mx:ColumnSeries displayName="Series 1" yField=""/>
			</mx:series>
		</mx:ColumnChart>
		<mx:Label text="Year" fontWeight="bold"/>
		<mx:ColumnChart id="year" width="100%" height="100%">
			<mx:series>
				<mx:ColumnSeries displayName="Series 1" yField=""/>
			</mx:series>
		</mx:ColumnChart>
	</s:VGroup>
	
</mx:Window>
